<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dylan.web.demo.mapper.LockMapper">

    <!-- 查找用户信息 -->
    <select id="selectLockForUpdate" resultType="com.dylan.web.demo.model.DBLock">
        select *
        from t_lock
        where resource = #{resource}
            for update
    </select>

</mapper>